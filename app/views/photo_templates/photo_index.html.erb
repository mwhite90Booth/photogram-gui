<h1>List of photos</h1>

<form action="/insert_photo" method="post">
  <label for="image">Image</label>
  <input type="text" id="image" name="image" placeholder="Enter a URL for the image...">

  <label for="caption">Caption</label>
  <textarea type="text" id="caption" name="caption" placeholder="Enter a caption for the photo..."></textarea>

  <label for="owner_id">Owner ID</label>
  <input type="text" id="owner_id" name="owner_id" placeholder="Enter an ID of a User">

  <button>Add photo</button>
</form>

<hr>

<table border=1>
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @photo_list.each do |photo|%>
    <tr>
      <td><img src="<%=photo.image%>"></td>
      <td><%=photo.caption%></td>
      <td><%=photo.poster.username%></td>
      <td><%=photo.created_at%></td>
      <td><a href="/photos/<%=photo.id%>">Show Details</a></td>
    </tr>
  <% end%>
</table>
