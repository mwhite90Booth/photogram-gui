<h1><%=@user.username%></h1>

<dl>
  <dt>ID</dt>
  <dd><%=@user.id%></dd>

  <dt>Edit user</dt>
  <dd>
    <form action="/update_user/<%=@user.id%>" method="post">
      <label for="updated_username">Username</label>
      <input type="text" id="updated_username" name="updated_username" value="<%=@user.username%>">
      <button>Update user</button>
    </form>
  </dd>
</dl>

<table border=1>
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

<h2>Own Photos (<%= @user.own_photos.count%>)</h2>

  <% @user.own_photos.each do |photo|%>
    <tr>
      <td><img src="<%=photo.image%>"></td>
      <td><%=photo.caption%></td>
      <td><%=photo.poster.username%></td>
      <td><%=photo.created_at%></td>
      <td><a href="/photos/<%=photo.id%>">Show Details</a></td>
    </tr>
  <% end%>
</table>
